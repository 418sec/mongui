extends db

block collection
	input#collection(type="hidden",value=collection)
	form#post(style="display:none",method="post")
		input#op(type="hidden",name="op")
	.actions
		b Collection: 
		span=op
		br
		a(href="/db/"+dbname+"/"+collection,class={active:!op}) Consultar
		|  | 
		a(href="?op=insert",class={active:op==="insert"}) Insertar
		|  | 
		a(href="truncate",onclick!="if(confirm('Are you sure to delete all records in collection \\'"+collection+"\\'?')){op.value='truncate';$('#post').submit();}return false") Limpiar
		|  | 
		a(href="?op=stats",class={active:op==="stats"}) Estadística
		|  | 
		a(href="?op=indexes",class={active:op==="indexes"}) Índices
		|  | 
		a(href="?op=rename",class={active:op==="rename"}) Renombrar
		|  | 
		a(href="?op=dup",class={active:op==="dup"}) Duplicar
		|  | 
		a(href="?op=validate",class={active:op==="validate"}) Validar
		|  | 
		a(href="?action=drop",onclick!="if(confirm('Are you sure to drop collection \\'"+collection+"\\'?')){op.value='drop';$('#post').submit();}return false") Eliminar

	if err
		p(style="color:red")=err

	block collection-content